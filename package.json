{
  "name": "kanban-board",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite --host 0.0.0.0 --port 3010\" \"node server/index.js\"",
    "dev:external": "concurrently \"vite --host 0.0.0.0 --port 3010 --https\" \"node server/index.js\"",
    "build": "tsc && vite build",
    "start": "node server/index.js",
    "serve": "vite preview --port 3010 --host 0.0.0.0",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "docker:build": "docker build -t easy-kanban .",
    "docker:run": "docker run -p 3010:3010 -p 3222:3222 easy-kanban",
    "docker:dev": "docker compose up --build",
    "docker:stop": "docker compose down",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "docker:dev-legacy": "docker-compose up --build",
    "docker:stop-legacy": "docker-compose down",
    "docker:clean-legacy": "docker-compose down -v && docker system prune -f"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tiptap/extension-bold": "^2.9.1",
    "@tiptap/extension-bullet-list": "^2.9.1",
    "@tiptap/extension-document": "^2.9.1",
    "@tiptap/extension-heading": "^2.9.1",
    "@tiptap/extension-image": "^2.9.1",
    "@tiptap/extension-italic": "^2.9.1",
    "@tiptap/extension-link": "^2.9.1",
    "@tiptap/extension-list-item": "^2.9.1",
    "@tiptap/extension-ordered-list": "^2.9.1",
    "@tiptap/extension-paragraph": "^2.9.1",
    "@tiptap/extension-strike": "^2.9.1",
    "@tiptap/extension-text": "^2.9.1",
    "@tiptap/extension-text-align": "^2.9.1",
    "@tiptap/extension-underline": "^2.9.1",
    "@tiptap/pm": "^2.9.1",
    "@tiptap/react": "^2.9.1",
    "@tiptap/starter-kit": "^2.9.1",
    "@types/dompurify": "^3.0.5",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
